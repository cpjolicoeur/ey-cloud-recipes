check process <%= @worker_name %>
  with pidfile /data/<%= @app_name %>/shared/pids/delayed_job.<%= @worker_number %>.pid
  start program = "/usr/bin/env RAILS_ENV=<%= @framework_env %> /data/<%= @app_name %>/current/script/delayed_job start -i <%= @worker_number %>" as uid <%= @user %> and gid <%= @user %> with timeout 60 seconds
  start program = "/usr/bin/env RAILS_ENV=<%= @framework_env %> /data/<%= @app_name %>/current/script/delayed_job stop -i <%= @worker_number %>" as uid <%= @user %> and gid <%= @user %> with timeout 60 seconds
  if totalmem is greater than 300 MB then restart # eating up memory?
  group dj_<%= @app_name %>
